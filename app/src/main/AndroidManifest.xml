        <activity
            android:name=".ActivityNotes"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".ActivityLinks"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
