<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.com.codespace.transito.ActivityMain">

    <include android:id="@+id/myToolbar" layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myToolbar"
        android:paddingTop="@dimen/padding_large"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small">

        <Button
            android:id="@+id/btnTransito1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="@string/reglamento_transito_title_long"/>

        <Button
            android:id="@+id/btnTransito2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTransito1"
            android:background="@drawable/custom_button"
            android:text="@string/reglamento_licencias_title_long"/>

        <Button
            android:id="@+id/btnTransito3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTransito2"
            android:background="@drawable/custom_button"
            android:text="@string/reglamento_vehiculos_title_long"/>

        <Button
            android:id="@+id/btnTransito4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTransito3"
            android:background="@drawable/custom_button"
            android:text="@string/senales_transito_title"/>

        <Button
            android:id="@+id/btnTransito5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTransito4"
            android:background="@drawable/custom_button"
            android:text="@string/consultas_online_title"/>

        <Button
            android:id="@+id/btnTransito6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnTransito5"
            android:background="@drawable/custom_button"
            android:text="@string/infracciones_conductor"/>

     </RelativeLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:adSize="SMART_BANNER"/>

</RelativeLayout>
