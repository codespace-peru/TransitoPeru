<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_text">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_app_main"
        android:layout_gravity="center"
        android:text="MIS NOTAS"
        android:textColor="@color/text_color3"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/title_divider">
    </View>

    <TextView
        android:id="@+id/txtNoneNotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_content_article_size"
        android:textStyle="italic|bold"
        android:text="No se encontraron notas"
        android:textColor="@color/text_color2"
        android:layout_marginTop="5dp"/>

    <ListView
        android:id="@+id/lvNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:divider="@color/gridchild_divider"
        android:dividerHeight="2dp">
    </ListView>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <com.google.android.gms.ads.AdView android:id="@+id/adViewNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            ads:adUnitId="ca-app-pub-4549935446415170/9666248846"
            ads:adSize="BANNER"/>
    </LinearLayout>

</RelativeLayout>