<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_text">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">
        <ExpandableListView
            android:id="@+id/myExpand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/group_divider"
            android:childDivider="@color/child_divider"
            android:dividerHeight="1dp">
        </ExpandableListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true">
        <com.google.android.gms.ads.AdView android:id="@+id/adViewInfracciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            ads:adUnitId="ca-app-pub-4549935446415170/9666248846"
            ads:adSize="BANNER"/>
    </LinearLayout>
</RelativeLayout>
